
@{
    ViewBag.Title = "QR";
}

<style>
    .container {
        width: 890px;
        height: 700px;
        display: flex;
        justify-content: center;
        align-content: center;
        color: #000000;
        background-color: #ffffff;
        margin-top: 50px;
        margin-bottom: 50px;
        border-radius: 40px;
        box-shadow: 0 1px 0 rgba(0,0,0,0.1);
        position: relative;
        padding-bottom: 50px; /* extra space for form */
    }

    h1 {
        font-family: 'Poppins', Arial, sans-serif;
        color: #396568;
        font-weight: 700;
        font-size: 60px;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        top: 65px;
        width: 738.4px;
        text-align: center;
    }

    p {
        font-family: 'Poppins', Arial, sans-serif;
        font-size: 16px;
        font-weight: 500;
        color: #3D2C56;
        line-height: 1.4;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        top: 140px;
        text-align: center;
        width: 500px;
    }

    .cam-container {
        width: 350px;
        height: 250px;
        display: flex;
        justify-content: center;
        align-content: center;
        color: #000000;
        background-color: rgba(0,0,0,0.1);
        margin-top: 200px;
        margin-bottom: 50px;
        border-radius: 30px;
    }

    #qr-reader {
        width: 100%;
        height: 100%px;
        border: none;
        box-shadow: none;
        border-radius: 30px;
        overflow: hidden;
    }

    #qr-reader__dashboard_section_csr button[title="Start Scanning"],
    #qr-reader__dashboard_section_csr button[title="Stop Scanning"] {
        display: none !important;
    }
</style>

<div class="container table-responsive">
    <h1>Scan your QR</h1>
    <p class="instruct">
        To proceed, kindly scan your QR code using the scanner provided. This will allow you to move forward smoothly.
    </p>

    <div class="cam-container">
        <div id="qr-reader"></div>
    </div>

    <button id="startBtn" class="btn">Start Scanning</button>
    <button id="stopBtn" class="btn">Stop Scanning</button>

</div>

<!-- Import Html5-Qrcode library -->
<script src="https://unpkg.com/html5-qrcode"></script>
<script>
    document.addEventListener("DOMContentLoaded", () => {

        const html5QrCode = new Html5Qrcode("qr-reader"); // Use the low-level class

        function onScanSuccess(decodedText) {
            alert("Scanned: " + decodedText);
        }

        const config = { fps: 10, qrbox: 250 };

        // Custom Start button
        document.getElementById("startBtn").addEventListener("click", () => {
            html5QrCode.start(
                { facingMode: "environment" }, // or cameraId
                config,
                onScanSuccess
            ).catch(err => console.error("Failed to start scanner:", err));
        });

        // Custom Stop button
        document.getElementById("stopBtn").addEventListener("click", () => {
            html5QrCode.stop().then(() => {
                html5QrCode.clear(); // clear camera preview
                console.log("Scanner stopped");
            }).catch(err => console.error("Failed to stop scanner:", err));
        });

    });
</script>
