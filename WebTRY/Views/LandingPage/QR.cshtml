        box-shadow: 0 1px 0 rgba(0,0,0,0.1);
        position: relative;
        padding-bottom: 50px; /* extra space for form */
    }

    h1 {
        font-family: 'Poppins', Arial, sans-serif;
        color: #396568;
        font-weight: 700;
        font-size: 60px;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        top: 65px;
        width: 738.4px;
        text-align: center;
    }

    p {
        font-family: 'Poppins', Arial, sans-serif;
        font-size: 16px;
        font-weight: 500;
        color: #3D2C56;
        line-height: 1.4;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        top: 140px;
        text-align: center;
        width: 500px;
    }

    .cam-container {
        width: 350px;
        height: 250px;
        display: flex;
        justify-content: center;
        align-content: center;
        color: #000000;
        background-color: rgba(0,0,0,0.1);
        margin-top: 200px;
        margin-bottom: 50px;
        border-radius: 30px;
    }

    #qr-reader {
        width: 100%;
        height: 100%px;
        border: none;
        box-shadow: none;
        border-radius: 30px;
        overflow: hidden;
    }

    #qr-reader__dashboard_section_csr button[title="Start Scanning"],
    #qr-reader__dashboard_section_csr button[title="Stop Scanning"] {
        display: none !important;
    }

    #startBtn {
        position: absolute;
        top: 475px;
        left: 315px;
        padding: 8px 15px;
        font-size: 14px;
        font-weight: 600;
        background-color: #396568;
        color: white;
        border: none;
        border-radius: 40px;
        box-shadow: 0 1px 0 rgba(0,0,0,0.1);
    }

    #stopBtn {
        position: absolute;
        top: 475px;
        left: 450px;
        padding: 8px 13px;
        font-size: 14px;
        font-weight: 600;
        background-color: #396568;
        color: white;
        border: none;
        border-radius: 40px;
        box-shadow: 0 1px 0 rgba(0,0,0,0.1);
    }

    #uploadBtn {
        position: absolute;
        top: 530px;
        left: 411px;
        font-size: 14px;
        font-weight: 600;
        color: #396568;
        cursor: pointer;
        text-decoration: underline;
    }

    .btn-close {
        position: absolute;
        left: 812px;
        padding: 35px 25px;
        border-color: red;
    }

    .btn-close:focus {
            box-shadow: none;
            outline: none;
    }

    #cam {
        position: absolute;
        top: 54%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 85px;
        height: 85px;
    }

</style>

<div class="container table-responsive">
    <h1>Scan your QR</h1>
    <p class="instruct">
        To proceed, kindly scan your QR code using the scanner provided. This will allow you to move forward smoothly.
    </p>

    <div class="cam-container">
        <img src="~/Assets/camera icon.svg" alt="Cam Icon" id="cam">
        <div id="qr-reader"></div>
    </div>

    <button id="startBtn" class="btn ">Start Scanning</button>
    <button id="stopBtn" class="btn">Stop Scanning</button>

    <input type="file" id="uploadFile" accept="image/*" style="display:none;">

    <label for="uploadFile" id="uploadBtn">Upload QR</label>

    <button type="button" class="btn-close" aria-label="Close" onclick="window.location.href='@Url.Action("Index","LandingPage")'"></button>
</div>

<!-- Import Html5-Qrcode library -->
<script src="https://unpkg.com/html5-qrcode"></script>
<script>
    document.addEventListener("DOMContentLoaded", () => {

        const html5QrCode = new Html5Qrcode("qr-reader");

        function onScanSuccess(decodedText) {
            alert("Scanned: " + decodedText);
        }

        const config = { fps: 10, qrbox: 225 };

        // Start button
        document.getElementById("startBtn").addEventListener("click", () => {
            html5QrCode.start(
                { facingMode: "environment" }, 
                config,
                onScanSuccess
            ).catch(err => console.error("Failed to start scanner:", err));
        });

        // Stop button
        document.getElementById("stopBtn").addEventListener("click", () => {
            html5QrCode.stop().then(() => {
                html5QrCode.clear();
                console.log("Scanner stopped");
            }).catch(err => console.error("Failed to stop scanner:", err));
        });

        // Upload File
        document.getElementById("uploadFile").addEventListener("change", (e) => {
            if (e.target.files.length === 0) return;

            const file = e.target.files[0];
            html5QrCode.scanFile(file, true)
                .then(decodedText => {
                    alert("Scanned from file: " + decodedText);
                })
                .catch(err => {
                    alert("File scan failed: " + err);
                });
        });

    });
</script>